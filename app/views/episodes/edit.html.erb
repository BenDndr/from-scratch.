<div class="bloc">
    <% if current_user && current_user.admin %>
        <h2>Edit Episode</h2>
        <%= simple_form_for(@episode) do |f| %>
            <%= f.input :title %>
            <%= f.input :number %>
            <%= f.input :guest %>
            <%= f.input :company %>
            <%= f.input :date %>
            <%= f.input :url_spotify %>
            <%= f.input :url_apple %>
            <%= f.input :url_deezer %>
            <%= f.input :url_google %>
            <%= f.input :url_amazon %>
            <%= f.input :photo, as: :file %>
            <%= f.input :desc, as: :rich_text_area %>
            <br>
            <%= f.button :submit, "Submit", class: "btn-admin" %>
        <% end %>
        <br>
        <%= link_to episode_path(@episode) do %>
            <button class="btn-admin">Back</button>
        <% end %>
    <% end %>
</div>